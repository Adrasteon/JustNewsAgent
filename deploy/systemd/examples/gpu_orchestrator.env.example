# /etc/justnews/gpu_orchestrator.env (example)
# Copy this file to /etc/justnews/gpu_orchestrator.env and adjust as needed.
# Safe, production-friendly defaults: read-only posture with SAFE_MODE enabled.

# Networking
GPU_ORCHESTRATOR_PORT=8014
MCP_BUS_URL=http://localhost:8000

# Safety: keep orchestrator in read-only mode until allocation features are enabled
SAFE_MODE=true

# GPU visibility: orchestrator does not need CUDA; keep empty in SAFE_MODE
USE_GPU=false
CUDA_VISIBLE_DEVICES=

# MPS Resource Allocation: Enable NVIDIA Multi-Process Service for GPU isolation
ENABLE_MPS=true
ENABLE_NVML=true

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# Systemd requirement: wait for MCP bus (1=on, 0=off)
REQUIRE_BUS=1
