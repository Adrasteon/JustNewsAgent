{
  "id": null,
  "title": "JustNews GPU Monitoring",
  "tags": [
    "justnews",
    "gpu",
    "nvidia",
    "performance"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "GPU Memory Usage (GB)",
      "type": "graph",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_FB_USED / 1024 / 1024 / 1024",
          "legendFormat": "GPU Memory Used (GB)",
          "refId": "A"
        },
        {
          "expr": "DCGM_FI_DEV_FB_TOTAL / 1024 / 1024 / 1024",
          "legendFormat": "GPU Memory Total (GB)",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "GPU Utilization (%)",
      "type": "graph",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "legendFormat": "GPU Utilization %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "GPU Temperature (°C)",
      "type": "graph",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_TEMP",
          "legendFormat": "GPU Temperature (°C)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "GPU Power Consumption (W)",
      "type": "graph",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_POWER_USAGE",
          "legendFormat": "GPU Power (W)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "GPU Memory Pressure",
      "type": "stat",
      "targets": [
        {
          "expr": "(DCGM_FI_DEV_FB_USED / DCGM_FI_DEV_FB_TOTAL) * 100",
          "legendFormat": "GPU Memory Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "from": 0,
                "to": 70,
                "result": {
                  "text": "LOW",
                  "color": "green"
                }
              },
              "type": "range"
            },
            {
              "options": {
                "from": 70,
                "to": 85,
                "result": {
                  "text": "MEDIUM",
                  "color": "orange"
                }
              },
              "type": "range"
            },
            {
              "options": {
                "from": 85,
                "to": 100,
                "result": {
                  "text": "HIGH",
                  "color": "red"
                }
              },
              "type": "range"
            }
          ]
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "GPU Thermal Status",
      "type": "stat",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_TEMP",
          "legendFormat": "GPU Temp (°C)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "from": 0,
                "to": 60,
                "result": {
                  "text": "COOL",
                  "color": "green"
                }
              },
              "type": "range"
            },
            {
              "options": {
                "from": 60,
                "to": 75,
                "result": {
                  "text": "WARM",
                  "color": "orange"
                }
              },
              "type": "range"
            },
            {
              "options": {
                "from": 75,
                "to": 100,
                "result": {
                  "text": "HOT",
                  "color": "red"
                }
              },
              "type": "range"
            }
          ]
        }
      },
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "GPU Performance by Agent",
      "type": "table",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_FB_USED",
          "legendFormat": "{{gpu}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 16
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "refresh": "30s",
  "schemaVersion": 27,
  "version": 0,
  "links": []
}
