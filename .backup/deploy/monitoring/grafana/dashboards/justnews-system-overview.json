{
  "id": null,
  "title": "JustNews System Overview",
  "tags": [
    "justnews",
    "overview",
    "system"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Service Health Status",
      "type": "stat",
      "targets": [
        {
          "expr": "up{job=~\"justnews-.*\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                },
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Active Alerts",
      "type": "stat",
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}",
          "legendFormat": "{{alertname}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Request Rate by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(justnews_requests_total[5m])",
          "legendFormat": "{{job}} - {{method}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Error Rate by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(justnews_requests_total{status=~\"5..\"}[5m]) / rate(justnews_requests_total[5m]) * 100",
          "legendFormat": "{{job}} error rate",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 5,
      "title": "Response Time (95th percentile)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(justnews_request_duration_seconds_bucket[5m]))",
          "legendFormat": "{{job}} 95th percentile",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "CPU Usage by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "justnews_cpu_usage_percent",
          "legendFormat": "{{job}} CPU %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 7,
      "title": "Memory Usage by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "justnews_memory_usage_bytes{type=\"rss\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{job}} Memory (GB)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      }
    },
    {
      "id": 8,
      "title": "GPU Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "justnews_gpu_memory_used_bytes / 1024 / 1024 / 1024",
          "legendFormat": "{{job}} GPU {{gpu_id}} (GB)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      }
    },
    {
      "id": 9,
      "title": "GPU Utilization",
      "type": "graph",
      "targets": [
        {
          "expr": "justnews_gpu_utilization_percent",
          "legendFormat": "{{job}} GPU {{gpu_id}} %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      }
    },
    {
      "id": 10,
      "title": "Processing Queue Depth",
      "type": "graph",
      "targets": [
        {
          "expr": "justnews_processing_queue_size",
          "legendFormat": "{{job}} {{queue_type}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 40
      }
    },
    {
      "id": 11,
      "title": "Quality Scores",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.5, rate(justnews_quality_score_bucket[5m]))",
          "legendFormat": "{{job}} {{metric_type}} median",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 40
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "refresh": "30s",
  "schemaVersion": 27,
  "version": 0,
  "links": []
}
